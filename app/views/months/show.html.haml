.wrapper
  = render 'shared/index'
  .expenses
    .left-content
      .left-content__title
        %h2.left-content__title__name
        支出
      .left-content__list
        %table.left-content__list__category
          - @categories_hash.each do |k,v|
            %tr.category{"data-cat-id": v[1].contents.where("month_id = #{@month.id}").length}
              %td.triangle-open
              %td.triangle-close.hidden
              %td.category-name
                = "●#{k}" + ":"
              %td
                = "¥#{v[0]}"  
            
            - v[1].contents.where("month_id = #{@month.id}").each do |con|
              %tr.content-show.hidden
                %td
                %td
                  = "・#{con.content}"+":"
                %td
                  = "¥#{con.money}"
      
      .left-content__total
        %p.left-content__total__category
          合計:
          = "¥#{Content.where("month_id = #{@month.id}").sum(:money).to_i}"
        %p.left-content__total__money
    .chart
      = pie_chart @categories_hash, id: "total-chart", width: "500px", height: "400px"
    

    
:css
  .category-name {
    width: 150px;
  }
  .triangle-open {
    width: 0;
    height: 0;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-top: 10px solid black;
  }
  .triangle-close{
    width: 0;
    height: 0;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-bottom: 10px solid black;
    
  }
  .hidden {
    display: none;
  }
  

