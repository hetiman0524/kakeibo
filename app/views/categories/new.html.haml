.expense-form
  %h1 新規入力
  = form_for(@content) do |f|
    = f.label :name, "カテゴリー"
    = f.collection_select :category_id, Category.all, :id, :name
    = f.fields_for :content, class: "form-month" do |m| 
      = m.label :month, "月"
      = m.select :month, [["1月","1月"], ["2月","2月"], ["3月","3月"], ["4月","4月"], ["5月","5月"], ["6月","6月"], ["7月","7月"], ["8月","8月"], ["9月","9月"], ["10月","10月"], ["11月","11月"], ["12月","12月"]]
    = f.fields_for :content, class: "form-content" do |c| 
      = c.label :content, "内容"
      = c.text_field :content
      = c.label :money, "金額" 
      = c.text_field :money
    = f.submit "登録する"